<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1CDF4"
    tools:context=".PreTracerouteActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1sp"
            android:text="Traceroute"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/palanquin"
        android:lineSpacingExtra="1sp"
        android:text="@string/traceroute_desc"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        />

    <EditText
        android:id="@+id/traceroute_ip"
        android:hint="Enter IP or domain"
        android:padding="15dp"
        android:textColorHint="#000"
        android:textStyle="italic"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btn_traceroute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traceroute"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="411dp" />

</LinearLayout>